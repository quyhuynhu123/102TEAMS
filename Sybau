local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer

--[[ 
üí• FULL SCRIPT: Anti-Annoying GUI Cleaner
üìå T·ª± ƒë·ªông x√≥a GUI ƒë·ªôc h·∫°i trong Grow a Garden ho·∫∑c b·∫•t k·ª≥ game n√†o
üëÅ‚Äçüó® T√¨m v√† lo·∫°i b·ªè c√°c GUI ch·ª©a: "Script Loading Please Wait!", "discord.gg", "loading"
]]

-- B·∫Øt ƒë·∫ßu x√≥a GUI ch·ª©a n·ªôi dung kh√¥ng mong mu·ªën
local unwantedKeywords = {
    "script loading please wait",
    "discord.gg",
    "loading"
}

-- H√†m ki·ªÉm tra v√† x√≥a GUI ƒë·ªôc h·∫°i
local function removeUnwantedGUI()
    for _, gui in ipairs(game:GetDescendants()) do
        if gui:IsA("TextLabel") or gui:IsA("TextButton") then
            local lowerText = string.lower(gui.Text)
            for _, keyword in ipairs(unwantedKeywords) do
                if string.find(lowerText, keyword) then
                    local parentGui = gui:FindFirstAncestorWhichIsA("ScreenGui")
                    if parentGui and parentGui.Parent == game.CoreGui or parentGui.Parent == game.Players.LocalPlayer:FindFirstChild("PlayerGui") then
                        print("üßπ Removing ScreenGui:", parentGui.Name)
                        parentGui:Destroy()
                    else
                        print("üßπ Removing GUI Element:", gui.Name)
                        gui:Destroy()
                    end
                    break
                end
            end
        end
    end
end

-- T·ª± ƒë·ªông ch·∫°y v√† l·∫∑p l·∫°i
task.spawn(function()
    while true do
        pcall(removeUnwantedGUI)
        task.wait(1) -- L·∫∑p l·∫°i m·ªói gi√¢y
    end
end)

-- D·ªØ li·ªáu pet theo t·ª´ng lo·∫°i tr·ª©ng
