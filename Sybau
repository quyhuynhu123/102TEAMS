-- H√†m ch·ªçn pet ng·∫´u nhi√™n theo t·ªâ l·ªá
local function getRandomPet(pets)
    local totalWeight = 0
    for _, pet in ipairs(pets) do
        totalWeight += pet.Weight
    end
    local rand = math.random() * totalWeight
    local sum = 0
    for _, pet in ipairs(pets) do
        sum += pet.Weight
        if rand <= sum then
            return pet.Name
        end
    end
    return pets[1].Name
end

-- GUI
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "PetRandomizerGUI"
gui.ResetOnSpawn = false

local main = Instance.new("Frame", gui)
main.Size = UDim2.new(0, 200, 0, 60)
main.Position = UDim2.new(0.5, -100, 0, 100)
main.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
main.BackgroundTransparency = 0.3
main.Active = true
main.Draggable = true

local toggle = Instance.new("TextButton", main)
toggle.Size = UDim2.new(1, 0, 0.5, 0)
toggle.Position = UDim2.new(0, 0, 0, 0)
toggle.Text = "Toggle Randomizer"
toggle.TextColor3 = Color3.new(1, 1, 1)
toggle.BackgroundTransparency = 1
toggle.Font = Enum.Font.GothamBold
toggle.TextScaled = true

local timerLabel = Instance.new("TextLabel", main)
timerLabel.Size = UDim2.new(1, 0, 0.5, 0)
timerLabel.Position = UDim2.new(0, 0, 0.5, 0)
timerLabel.BackgroundTransparency = 1
timerLabel.TextColor3 = Color3.new(1, 1, 1)
timerLabel.Font = Enum.Font.Gotham
timerLabel.TextScaled = true
timerLabel.Text = "Next random in: 30s"

local enabled = true
local countdown = 30

toggle.MouseButton1Click:Connect(function()
    enabled = not enabled
    toggle.Text = enabled and "Randomizer ON" or "Randomizer OFF"
end)

-- ƒê·∫øm ng∆∞·ª£c
task.spawn(function()
    while true do
        wait(1)
        if enabled then
            countdown -= 1
            if countdown <= 0 then
                countdown = 30
            end
        end
        timerLabel.Text = "Next random in: " .. countdown .. "s"
    end
end)

-- Theo d√µi tr·ª©ng v√† random pet
local lastRandom = {}
RunService.RenderStepped:Connect(function()
    if not enabled or countdown > 0 then return end

    for _, egg in ipairs(workspace:GetDescendants()) do
        if egg:IsA("Model") and egg:FindFirstChild("EggType") and (egg.PrimaryPart or egg:FindFirstChild("HumanoidRootPart")) then
            local root = egg.PrimaryPart or egg:FindFirstChild("HumanoidRootPart")
            local dist = (player.Character and player.Character:FindFirstChild("HumanoidRootPart") and (player.Character.HumanoidRootPart.Position - root.Position).Magnitude) or 0

            if dist <= 50 and (not lastRandom[egg] or tick() - lastRandom[egg] >= 30) then
                local eggType = egg.EggType.Value
                local petList = eggPetData[eggType]
                if petList then
                    local chosenPet = getRandomPet(petList)

                    if egg:FindFirstChild("PetLabel") then
                        egg.PetLabel:Destroy()
                    end

                    local label = Instance.new("BillboardGui", egg)
                    label.Name = "PetLabel"
                    label.Size = UDim2.new(0, 200, 0, 50)
                    label.Adornee = root
                    label.StudsOffset = Vector3.new(0, 3, 0)
                    label.AlwaysOnTop = true

                    local text = Instance.new("TextLabel", label)
                    text.Size = UDim2.new(1, 0, 1, 0)
                    text.BackgroundTransparency = 1
                    text.Text = chosenPet
                    text.TextScaled = true
                    text.Font = Enum.Font.FredokaOne
                    text.TextColor3 = Color3.new(1, 1, 0)

                    lastRandom[egg] = tick()
                end
            end
        end
    end

    countdown = 30
end)
